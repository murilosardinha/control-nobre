.dropdown
  %button#dropdownMenuButtonTwo.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", :href => "#", :role => "button"}
    =icon('fas', 'search')
    Filtrar

  .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuButtonTwo"}
    = search_form_for @q, url: filial_machines_path(@filial), html: { class: 'px-4 py-3'} do |f|
      .form-group
        %label Equipamento
        = f.search_field :name_i_cont, class: "form-control", placeholder: 'Equipamento'
      .form-group
        %label Referência
        = f.search_field :reference_i_cont, class: "form-control", placeholder: 'Referência'
      .form-group
        %label Item
        = f.search_field :items_name_or_items_description_i_cont, class: "form-control", placeholder: 'Item'
      .form-group
        %label Paralelo
        = f.search_field :similars_name_or_similars_description_i_cont, class: "form-control", placeholder: 'Paralelo'

      .form-group.mt-2
        = f.submit class: "btn btn-primary", value: "Filtrar"

        - if params[:q].present?
          = link_to request.path, class:"btn btn-default float-end" do
            = icon('fas', 'window-close')
            Limpar Filtros
